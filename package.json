        "eslint-config-prettier": "^3.0.1",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-jest": "^22.1.0",
        "eslint-plugin-jsx-a11y": "^6.1.2",
        "eslint-plugin-react": "^7.11.1",
        "execa": "^0.10.0",
        "folder-hash": "^2.1.1",
        "fs-extra": "^7.0.0",
        "husky": "^1.1.2",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^24.0.0",
        "lerna": "^2.2.0",
        "node-sass": "^4.5.2",
